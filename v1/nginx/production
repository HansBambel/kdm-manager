server {
    ### no-www redirect
    listen 80;
    server_name www.kdm-manager.com;
    rewrite  ^  http://kdm-manager.com$request_uri? permanent;
}

server {
    ### blog redirect
    listen 80;
    server_name blog.kdm-manager.com;
    return  301 http://kdm-manager.blogspot.com;

    listen 443 ssl; 
    if ($scheme != "https") {
        return 301 https://kdm-manager.blogspot.com;
    }
}

server {
    listen  80;
    server_name  kdm-manager.com;

    client_max_body_size 5M;    # big-ass avatar image support

    ### Logging
    access_log  /var/log/nginx/kdm-manager_com.access.log;
    error_log   /var/log/nginx/kdm-manager_com.error.log;

    ### Locations
    location / {
        rewrite ^/$ /index   last;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:8012;

        # Enable Gzip
        gzip  on;
        gzip_http_version 1.0;
        gzip_comp_level 2;
        gzip_min_length 1100;
        gzip_buffers     4 8k;
        gzip_proxied any;
        gzip_types
            # text/html is always compressed by HttpGzipModule
            text/css
            text/javascript
            text/xml
            text/plain
            text/x-component
            application/javascript
            application/json
            application/xml
            application/rss+xml
            font/truetype
            font/opentype
            application/vnd.ms-fontobject
            image/svg+xml;

        gzip_static on;
        gzip_proxied        expired no-cache no-store private auth;
        gzip_disable        "MSIE [1-6]\.";
        gzip_vary           on;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/kdm-manager.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kdm-manager.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    }

}

server {
    listen   80;
    server_name  media.kdm-manager.com;

    access_log  /var/log/nginx/kdm-manager_com.access.log;
    error_log   /var/log/nginx/kdm-manager_com.error.log;

    location / {
        root   /home/toconnell/kdm-manager/v1/media/;
        autoindex   on;
        add_header Access-Control-Allow-Origin *;
    }
}
