server {
    listen 80 default_server;
    listen [::]:80 default_server;
	server_name _;

    client_max_body_size 5M;    # big avatar uploads

    ### Logging
    access_log  /var/log/nginx/kdm-manager_com.access.log;
    error_log   /var/log/nginx/kdm-manager_com.error.log;


    ### Locations
    location / {
        rewrite ^/$ /index   last;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:8012;
        add_header Access-Control-Allow-Origin *;
    }

    # test SSL redirect
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/kdm-manager.com/fullchain1.pem;
    ssl_certificate_key /etc/letsencrypt/live/kdm-manager.com/privkey1.pem;

    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    }

}
